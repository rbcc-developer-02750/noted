<div class="static-reviews-section">
  <div class="header-wrapper">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div class="reviews-wrapper">
    <div class="reviews-swiper-container">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="reviews-card-wrapper">
              <div class="reviews-card">
                <p>{{ block.settings.review }}</p>
                <div class="profile-name-img-wrapper">
                  <p>{{ block.settings.name }}</p>
                  <div class="img-wrapper">
                    {% if block.settings.profile_img != blank %}
                      <img src="{{ block.settings.profile_img | img_url: "master" }}">
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- If we need navigation buttons -->
      <div class="swiper-button-prev">
        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="26" viewBox="0 0 15 26" fill="none">
          <path d="M14 1L2 13L14 25" stroke="#D9D9D9" stroke-width="2"/>
        </svg>
      </div>
      <div class="swiper-button-next">
        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="26" viewBox="0 0 15 26" fill="none">
          <path d="M1 25L13 13L0.999999 1" stroke="#D9D9D9" stroke-width="2"/>
        </svg>
      </div>

      <!-- If we need scrollbar -->
      <div class="swiper-scrollbar"></div>
    </div>
  </div>
</div>

<script>
  const swiper = new Swiper('.reviews-swiper-container', {
    loop: false,
    slidesPerView: 1,
    centeredSlides: false,
    spaceBetween: 44,
    // Navigation arrows
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      1281: {
        slidesPerView: 2,
      },
      1281: {
        slidesPerView: 3,
      }
    }
  });
</script>

{% schema %}
{
  "name": "Static Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "label": "Name",
          "id": "name",
        },
        {
          "type": "image_picker",
          "label": "Image",
          "id": "profile_img"
        },
        {
          "type": "textarea",
          "label": "Review",
          "id": "review"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Static Reviews",
      "settings": {}
    }
  ]
}
{% endschema %}
